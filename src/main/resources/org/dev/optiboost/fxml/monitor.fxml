<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Arc?>
<?import javafx.scene.text.Text?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.dev.optiboost.Controller.MonitorController"
          hgap="10" vgap="10">
    <!-- 使用Insets构造函数设置padding  -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <!-- CPU Section -->
    <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" spacing="5">
        <Label text="CPU"/>
        <Arc fx:id="cpuArc" radiusX="50" radiusY="50" startAngle="90" type="ROUND" fill="transparent" stroke="blue"/>
        <Text fx:id="cpuPercentageText" text="0.0%"/>
        <Text fx:id="cpuDataText" text="0.0/100.0"/>
    </VBox>
    <!-- Memory Section -->
    <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" spacing="5">
        <Label text="内存"/>
        <Arc fx:id="memoryArc" radiusX="50" radiusY="50" startAngle="90" type="ROUND" fill="transparent" stroke="green"/>
        <Text fx:id="memoryPercentageText" text="0.0%"/>
        <Text fx:id="memoryDataText" text="0.0/100.0"/>
    </VBox>
    <!-- Disk Section -->
    <VBox GridPane.rowIndex="0" GridPane.columnIndex="2" spacing="5">
        <Label text="磁盘"/>
        <Arc fx:id="diskArc" radiusX="50" radiusY="50" startAngle="90" type="ROUND" fill="transparent" stroke="orange"/>
        <Text fx:id="diskPercentageText" text="0.0%"/>
        <Text fx:id="diskDataText" text="0.0/100.0"/>
    </VBox>
</GridPane>
